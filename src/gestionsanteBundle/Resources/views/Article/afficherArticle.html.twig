{% extends 'gestionsanteBundle::layout.html.twig' %}
{% block content %}


    <div id="topOfPage" class="topTabsWrap">
        <div class="main">
            <div class="speedBar">
                <a class="home" href="{{ asset('index.html') }}">Home</a>
                <span class="breadcrumbs_delimiter">
              <i class="icon-right-open-mini"></i>
            </span>
                <a class="all" href="#">All Posts</a>
                <span class="breadcrumbs_delimiter">
              <i class="icon-right-open-mini"></i>
            </span>
                <span class="current">Standard Post</span>
            </div>
            <h3 class="pageTitle h3">{{ articles.nom }}</h3>
        </div>
    </div>

    <div class="mainWrap without_sidebar">
        <div class="main">
            <div class="content">

                <section id="mobile_tap_hover" class="itemPage post post_format_standard postAlter hrShadow no_padding">
                    <div class="container">
                        <article class="post_content">
                            <div class="thumb imgNav taphover">
                                <img alt="" src="{{ asset('images/'~articles.image) }}">
                                <a class="taphover itemPrev" href="#">
                      <span class="itInf">
                        <span class="titleItem">Previous item</span>
                        <span class="undertitleItem">What Should Parents Know...</span>
                      </span>
                                </a>
                                <a class="taphover itemNext" href="#">
                      <span class="itInf">
                        <span class="titleItem">Next item</span>
                        <span class="undertitleItem">When to Call the Doctor</span>
                      </span>
                                </a>
                            </div>

                            <h1 class="post_title entry-title">{{ articles.nom }}</h1>

                            <div class="post_text_area">
                                <p>{{ articles.text }}</p>
                                <div class="itemInfo">
                                    <div class="postSharing inited">
                                        <ul>
                                            <li class="squareButton light ico share">
                                                <a class="icon-share shareDrop" title="Share" href="#">Share</a>
                                                <ul class="share-social shareDrop inited" style="">
                                                    <li>
                                                        <a href="#" class="share-item" onclick="window.open('http://pinterest.com', '_blank', 'scrollbars=0, resizable=1, menubar=0, left=100, top=100, width=480, height=400, toolbar=0, status=0'); return false;">
                                                            <img src="{{ asset('images/pinterest_color.png') }}" alt="pinterest">Pinterest</a>
                                                    </li>
                                                    <li>
                                                        <a href="#" class="share-item" onclick="window.open('https://twitter.com', '_blank', 'scrollbars=0, resizable=1, menubar=0, left=100, top=100, width=480, height=400, toolbar=0, status=0'); return false;">
                                                            <img src="{{ asset('images/twitter_color.png') }}" alt="twitter">Twitter</a>
                                                    </li>
                                                    <li>
                                                        <a href="#" class="share-item" onclick="window.open('http://www.facebook.com', '_blank', 'scrollbars=0, resizable=1, menubar=0, left=100, top=100, width=480, height=400, toolbar=0, status=0'); return false;">
                                                            <img src="{{ asset('images/facebook_color.png') }}" alt="facebook">Facebook</a>
                                                    </li>
                                                </ul>
                                            </li>
                                            <li class="squareButton light ico">
                                                <a class="icon-eye" title="Views - 352" href="#">{{ articles.vues }}</a>
                                            </li>
                                            <li class="squareButton light ico">
                                                <a class="icon-star-1" title="Rating - 90.8" href="#">{{ articles.rating }}</a>
                                            </li>
                                            <li class="squareButton light ico likeButton like" data-postid="942" data-likes="2" data-title-like="Like" data-title-dislike="Dislike">
                                                <a class="icon-heart-1" title="Like - 2" href="#">
                                                    <span class="likePost">{{ articles.likes }}</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="post_info infoPost">
                                        Posted
                                        <a href="#" class="post_date date updated">August 29, 2014</a>
                                        <span class="separator">|</span>
                                        <span class="post_cats">
                          <a class="cat_link" href="#">Classic (4 columns),</a>
                          <a class="cat_link" href="#">Grid (4 columns,</a>
                          <a class="cat_link" href="#">Masonry (4 columns)</a>
                        </span>
                                    </div>
                                </div>
                            </div>

                        </article>
                    </div>
                </section>

                <section class="no_padding author vcard hrShadow">
                    <div class="container">
                        <h2 class="post_author_title">
                            author
                            <span>
                  <a href="#" class="fn">{{ articles.autheur }}</a>
                </span>
                        </h2>
                    </div>
                </section>



                <section class="no_padding formValid">
                    <div class="container">
                        <h2>Leave a Reply</h2>
                        <div class="commForm commentsForm">
                            <div id="respond" class="comment-respond">
                                <h3 id="reply-title" class="comment-reply-title">
                                    <small>
                                        <a rel="nofollow" id="cancel-comment-reply-link" href="{{ asset('#respond') }}">Cancel reply</a>
                                    </small>
                                </h3>
                                <p class="must-log-in">You must be <a href="#">logged in</a> to post a comment.</p>
                            </div>
                            <div class="nav_comments"></div>
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </div>




{% endblock %}