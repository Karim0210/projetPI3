{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<head>
<link rel="stylesheet" href="{{ asset('public2/node_modules/mdi/css/materialdesignicons.min.css')}}" />
<link rel="stylesheet" href="{{ asset('public2/node_modules/simple-line-icons/css/simple-line-icons.css')}}" />
<link rel="stylesheet" href="{{ asset('public2/css/style.css')}}" />
<link rel="shortcut icon" href="{{ asset('public2/images/favicon.png')}}" />
</head>
<body>

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth login-full-bg">
            <div class="row w-100">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-dark text-left p-5">
                        <h2>Login</h2>
                        </br>
                    <form action="{{ path("fos_user_security_check") }}" method="post"  >
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                        <div class="form-group">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text"  class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                            <i class="mdi mdi-account"></i>
                        </div>
                        <div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" class="form-control" id="password" name="_password" required="required" autocomplete="current-password" />
                            <i class="mdi mdi-eye"></i>
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between">
                            <div class="form-check"><label><input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" value="on">Remember me</label></div>
                            <a href="{{ path('fos_user_resetting_request') }}" class="forgot-pass">mot de passe oubli√©s ?</a>
                        </div>


                        <div class="mt-5">
                    <input type="submit" id="_submit" class="btn btn-block btn-warning btn-lg font-weight-medium" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                        </div>
                    </form>

                    <p class="Or-login-with my-3">Or login with</p>
                    <a href="#" class="facebook-login btn btn-facebook btn-block">Sign in with Facebook</a>
                    <a href="#" class="google-login btn btn-google btn-block">Sign in with Google+</a>
                    <a href="{{ path('fos_user_registration_register') }}" class="google-login btn btn-create-account btn-block">Create An Account</a>
                    </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
<!-- plugins:js -->
                    <script src="{{ asset('public2/node_modules/jquery/dist/jquery.min.js')}}"></script>
                    <script src="{{ asset('public2/node_modules/popper.js/dist/umd/popper.min.js')}}"></script>
                    <script src="{{ asset('public2/node_modules/bootstrap/dist/js/bootstrap.min.js')}}"></script>
                    <script src="{{ asset('public2/node_modules/perfect-scrollbar/dist/js/perfect-scrollbar.jquery.min.js')}}"></script>
                    <script src="{{ asset('public2/js/misc.js')}}">

                    </script>
</body>
